<h1>My Recipes</h1>

  <% @recipes.each do |recipe| %>
  <article>    
      <div>
      <p><%= link_to recipe.name, recipe, class:'recipe-name' %></p>
      <p><%= button_to 'Remove', recipe, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } if recipe.user == current_user %></p>
      </div>
       <div>
        <span><%= recipe.description %></span>
       </div>
   </article>
  <% end %>

